<h3>Company</h3>
<div class="row">
    <div class="col-sm-4 col-xs-6">
        {{#link-to 'companies.new' tagName='button'}}New Company{{/link-to}}
        <ul class="companies-index-list">
            {{#each model as |company|}}
                {{#link-to 'companies.company.show' company  tagName='li' class="company list-unstyled"}}
                    {{company.name}}
                {{/link-to}}
            {{/each}}
        </ul>
    </div>
    <div class="col-sm-8 col-xs-6">
        {{outlet}}
    </div>
</div>